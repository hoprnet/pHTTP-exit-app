{
    "name": "pHTTP-exit-app",
    "version": "1.0.0",
    "description": "privateHTTP exit application",
    "main": "src/index.ts",
    "license": "MIT",
    "private": false,
    "scripts": {
        "prebuild": "node -p \"'export default \\'' + require('./package.json').version + '\\';'\" > src/version.ts",
        "build": "yarn prebuild && tsc",
        "format": "prettier --write src/ .github/ .eslintrc.js .prettierrc.js jest.config.ts package.json tsconfig.json",
        "format:ci": "prettier --check src/ .github/ .eslintrc.js .prettierrc.js jest.config.ts package.json tsconfig.json",
        "lint": "eslint --fix src/",
        "lint:ci": "eslint --max-warnings 0 src/",
        "test": "jest --coverage"
    },
    "devDependencies": {
        "@stylistic/eslint-plugin": "^1.5.4",
        "@types/debug": "^4.1.12",
        "@types/jest": "^29.5.11",
        "@types/node": "18",
        "@typescript-eslint/eslint-plugin": "^6.19.1",
        "@typescript-eslint/parser": "^6.19.1",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "jest": "^29.7.0",
        "prettier": "^3.2.4",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "debug": "^4.3.4",
        "isomorphic-ws": "^5.0.0",
        "pHTTP-lib": "../pHTTP-lib",
        "sqlite3": "^5.1.7",
        "ws": "^8.16.0"
    }
}
